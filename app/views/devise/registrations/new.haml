- @page_title = "Sign up"
%h2= @page_title
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %fieldset
    %legend= @page_title
    %ul
      = render :partial => "form", :locals => {:f => f}
      %li
        = f.submit "Sign up"
= render :partial => "devise/shared/links"
